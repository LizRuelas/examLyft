<section>
  <h1>Music Database</h1>
  <hr>
  <h2  >Add a Song</h2>
    <div class="alert alert-info"><p class="status"></div>
    <div class="alert alert-danger"><p class="status-danger"></div>
  </p>
  <div class="errors"></div>
  <%= form_for(@music) do |f| %>
    <div class="field ">
      <%= f.label :title %><br>
      <%= f.text_field :title , class:'form-control inp', style:'width:25%' %>
    </div>
    <div class="field">
      <%= f.label :artist %><br>
      <%= f.text_field :artist , class:'form-control inp', style:'width:25%' %>
    </div>
    <div class="field">
      <%= f.label :year %><br>
      <%= f.text_field :year , class:'form-control inp' , style:'width:25%'%>
    </div>
    <div class="field">
      <%= f.label :genre %><br>
      <%= f.text_field :genre , class:'form-control inp' , style:'width:25%' %>
    </div>
    <div class="actions">
      <%= f.submit 'Add song', class: 'btn btn-primary ' , style:'margin-top:10px' %>
    </div>
    
  <% end %>
  
  <h2>List of Songs</h2>
  
  <table id="music_list" class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th>Year</th>
        <th>Genre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @musics.each do |music| %>
        <tr>
          <td><%= music.title %></td>
          <td><%= music.artist %></td>
          <td><%= music.year %></td>
          <td><%= music.genre %></td>
          <td><%= link_to 'x', music, method: :delete, class: 'music_delete' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div align="center"  class="alert alert-warning" ><p class="no_music">No music yet... please, add s</p></div>
  
</section>